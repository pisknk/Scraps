<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GoogleSignInButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gsi_button_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="GoogleSignInButtonText" parent="TextAppearance.Scraps.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.Scraps.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
