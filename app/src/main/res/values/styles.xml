<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GoogleSignInButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gsi_button_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="GoogleSignInButtonText" parent="TextAppearance.Scraps.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.Scraps.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Scraps.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Additional styles using thin font -->
    <style name="TextAppearance.Scraps.Thin" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/google_sans_thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Custom Dialog Styles -->
    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="CustomDialog.RoundedCorners" parent="CustomDialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>
</resources> 